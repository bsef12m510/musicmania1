@{
    ViewBag.Title = "Demo";
    Layout = null;
}

<html>

<head>

    <title> Demo </title>

    <style>
        body {
            background-color: #95B4C6;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 14px;
        }

        #pageAudio {
            width: 900px;
            margin: auto;
            padding: 10px;
        }

        #pageHeader {
            width: 1320px;
            margin: auto;
            background-color: #F2F2F2;
            padding: 10px;
        }

        #pageBody {
            width: 1320px;
            height: 500px;
            margin: auto;
            background-color: #FFF;
            
        }

        #pageFooter {
            width: 900px;
            margin: auto;
            background-color: #F2F2F2;
            padding: 10px;
        }

        .section {
            display: none;
            padding: 10px;
            font-size: 18px;
            height: 300px;
        }
    </style>

    <script>
        function toggleSection(sectionID) {

            var sa = new Array('Index', 'Categories', 'TopSingers', 'About', 'Contact', 'SignIn', 'SignUp');

            for (s in sa) {
                document.getElementById(sa[s]).style.display = 'none';
            }

            var myTarget = document.getElementById(sectionID);

            myTarget.style.display = 'block';
        }
    </script>

</head>

<body>
    <div align="right" id="pageAudio">

        @if(ViewBag.list!=null)
        {
        foreach(var p in ViewBag.list)
        {
        <select>

            <option>

                p

            </option>

        </select>
        }
        }
        <div class="player">


            <div>

                <h2 class="animated fadeInUp" style="font-family: 'Comic Sans MS'; "><p>Sun Satiya - Priya Sariya</p></h2>

                <audio style="margin-top:10px; padding-left:10px" controls>

                    <source src="~/Songs/Sun Saathiya.mp3" type="audio/ogg">



                </audio>

            </div>



        </div>

        </div>


    <div id="pageHeader">
        <h1 style="display:inline;">Site Logo</h1><br /><br />
        <p style="display:inline;">
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('Index');">Index</a> &nbsp; &nbsp;
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('Categories');">Categories</a> &nbsp; &nbsp;
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('TopSingers');">Top Singers</a> &nbsp; &nbsp;
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('About');">About</a> &nbsp; &nbsp;
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('Contact');">Contact</a> &nbsp; &nbsp;
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('SignIn');">SignIn</a> &nbsp; &nbsp;
            <a href="#" onclick="return false" onmousedown="javascript:toggleSection('SignUp');">SignUp</a>

        </p>
    </div>
    <div id="pageBody">
        <div id="Index" class="section" style="display:block;">Home Page Content Goes Here</div>
        <div id="Categories" class="section">Services Page Content Goes Here</div>
        <div id="TopSingers" class="section">Portfolio Page Content Goes Here</div>
        <div id="About" class="section">About Page Content Goes Here</div>
        <div id="Contact" class="section">Contact Page Content Goes Here</div>
        <div id="SignIn" class="section">Sign In Page Content Goes Here</div>
        <div id="SignUp" class="section">Sign Up Page Content Goes Here</div>
    </div>
    <div id="pageFooter">&copy;2010 DevelopPHP.com</div>
</body>

</html>
